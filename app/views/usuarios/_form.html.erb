<%= form_with(model: usuario) do |form| %>
  <% if usuario.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
        <% usuario.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="shadow overflow-hidden sm:rounded-md p-5 mt-10">  
  <div class="mt-5 mb-5">
    <%= form.label :nombre, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :nombre, class: 'mt-1 p-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' %>
  </div>

  <div class="mt-5 mb-5">
    <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :email, class: 'mt-1 p-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' %>
  </div>

  <div class="mt-5 mb-5">
    <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= form.password_field :password, class: 'mt-1 p-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' %>
  </div>

  <div class="mt-5 mb-5">
   <label class="block text-sm font-medium text-gray-700">Tipo de usuario</label>
    <select name="usuario[tipousuario_id]" class="mt-1 p-1 pl-2 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
          <% Tipousuario.all.each do |u| %>
            <option value="<%= u.id %>"><%= u.nombre_tipo_usuario %></option>
          <%end%>
    </select>
  </div>

  <div class="mt-5 mb-5">
    <%= form.submit class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>
</div>
<% end %>
